  var inWishlist=false;
    function addToWishList(){
      if(!inWishlist){
        $('#wishlist').attr('src','assert/productionPage/common/wishlist_curr.png');
      }else{
        $('#wishlist').attr('src','assert/productionPage/common/wishlist_none.png');
      }
      inWishlist=!inWishlist;
    }
  </script>
